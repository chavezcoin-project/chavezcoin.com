window.MenuLinksEnglish = React.createClass({
  render: function() {
    var options = [{"name": "inicio", "first_letter": "H", "cut_name": "ome"}, {"name": "guide", "first_letter": "G", "cut_name": "uide"}, {"name": "advantages", "first_letter": "A", "cut_name": "dvantages"}, {"name": "market", "first_letter": "B", "cut_name": "uy"}, {"name": "app", "first_letter": "A", "cut_name": "pp"}, {"name": "blog", "first_letter": "B", "cut_name": "log"}, {"name": "soporte", "first_letter": "S", "cut_name": "upport"}]
