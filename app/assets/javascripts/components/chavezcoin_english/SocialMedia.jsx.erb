window.SocialMedia = React.createClass({
  getInitialState: function() {
    return {
      language: 'español',
      socialMedia:
      [
        {
          name: 'facebook',
          link: '#',
          icon: 'fa-facebook'
        },
        {
          name: 'twitter',
          link: '#',
          icon: 'fa-twitter'
        },
        {
          name: 'instagram',
          link: '#',
          icon: 'fa-instagram'
        }
      ]
    };
  },
  render: function() {
    var self = this,
        socialMedia = [];
    if (this.props.language) {
      self.state.language = this.props.language;
    }
    this.state.socialMedia.forEach(function(media) {
      socialMedia.push(
        React.createElement('li',
          {
            className: 'hexagon-container',
            key: media.name,
            id: media.name
          },
            React.createElement('a',
              {
                className: 'hexagon ' + media.name,
                href: media.link
              },
              React.createElement('i',
                {
                  className: 'fa fa-' + media.name
                }
              )
            )
        )
      )
    });

    switch (this.state.language) {
      case 'english':
        return (
          React.createElement('section', {
            className: '-flex-center pure-u-1 social-container section-container -skew-container'
          },
            React.createElement('div',
              {
                className: 'limited-wrapper -flex-center'
              },
                React.createElement('h3',
                  {
                    className: 'main-title -bold _marginbottom-md'
                  }, 'Connect with us'
                ),
                React.createElement('ul',
                  {
                    className: 'social-media-list'
                  }, socialMedia
                ),
                React.createElement('form',
                  {
                    className: 'pure-u-1 subscribe-form'
                  },
                  React.createElement('p',
                    {
                      className: 'tag-text -white -center -fullwidth _marginbottom-md',
                    }, 'Receive our latest updates first by email'
                  ),
                  React.createElement('div',
                    {
                      className: 'fielset'
                    },
                    React.createElement('input',
                      {
                        className: 'input',
                        placeholder: 'Enter your email',
                        type: 'text'
                      }
                    ),
                    React.createElement('a',
                      {
                        className: 'button',
                      }, '+'
                    )
                  )
                )
            )
          )
        )
        break;
      default:
        return (
          React.createElement('section', {
            className: '-flex-center pure-u-1 social-container section-container -skew-container'
          },
            React.createElement('div',
              {
                className: 'limited-wrapper -flex-center'
              },
                React.createElement('h3',
                  {
                    className: 'main-title -bold _marginbottom-md'
                  }, 'Conecta con nosotros'
                ),
                React.createElement('ul',
                  {
                    className: 'social-media-list'
                  }, socialMedia
                ),
                React.createElement('form',
                  {
                    className: 'pure-u-1 subscribe-form'
                  },
                  React.createElement('p',
                    {
                      className: 'tag-text -white -center -fullwidth _marginbottom-md',
                    }, 'Sé el primero en enterarte de las últimas noticias referentes a ChávezCoin'
                  ),
                  React.createElement('div',
                    {
                      className: 'fielset'
                    },
                    React.createElement('input',
                      {
                        className: 'input',
                        placeholder: 'DIRECCIÓN DE EMAIL',
                        type: 'text'
                      }
                    ),
                    React.createElement('a',
                      {
                        className: 'button',
                      }, '+'
                    )
                  )
                )
            )
          )
        )
        break;
    }
  }
})