window.CoinsListEnglish = React.createClass({
  render: function() {

    var coinList = [];
    var chavezcoinprice = '1.00';
    var coins = this.props.coins;
    var control = 0;
    $.each(coins, function(key, coin) {
      coinList.push(<CoinInfo key={coin.symbol}  symbol={coin.symbol} name={coin.name} volumen={coin.volume.usd} change={coin.change} price={coin.price.usd} update={coin.timestamp} chcprice={chavezcoinprice} />);
      if (control == 13) {
        return false;
      }
      control++;
    });
    return(
      <div className="limited-wrapper price-container -flex-center">
        <ul className="pure-u-22-24 pure-u-md-1-2 pure-u-xl-1-3 two-column-list -currency-container">{coinList}</ul>
        <CoinDetailsEnglish />
        <ChavezcoinDetailsEnglish price={chavezcoinprice} />
        <h4 className=" main-title -midsize message">Currency price guide.</h4>
      </div>
    )

  }
})