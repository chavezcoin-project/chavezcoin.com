window.SocialMedia = React.createClass({
  getInitialState: function() {
    return {
      language: {},
      socialMedia:
      [
        {
          name: 'facebook',
          link: 'https://www.facebook.com/informandoavenezuela/',
          icon: 'fa-facebook'
        },
        {
          name: 'twitter',
          link: 'https://twitter.com/infoeconvzla',
          icon: 'fa-twitter'
        },
        {
          name: 'instagram',
          link: 'https://www.instagram.com/infoeconvzla/',
          icon: 'fa-instagram'
        }
      ]
    };
  },
  render: function() {
    var self = this,
        socialMedia = [];
    self.state.language = this.props.translations;
    this.state.socialMedia.forEach(function(media) {
      socialMedia.push(
        React.createElement('li',
          {
            className: 'hexagon-container',
            key: media.name,
            id: media.name
          },
            React.createElement('a',
              {
                className: 'hexagon ' + media.name,
                href: media.link,
                target: '_blank'
              },
              React.createElement('i',
                {
                  className: 'fa fa-' + media.name
                }
              )
            )
        )
      )
    });
    return (
      React.createElement('section', {
        className: '-flex-center pure-u-1 social-container section-container -skew-container -socialmedia',
        id: "socialmedia"
      },
        React.createElement('div',
          {
            className: 'limited-wrapper -flex-center'
          },
            React.createElement('h3',
              {
                className: 'main-title -bold _marginbottom-md'
              }, self.state.language.title
            ),
            React.createElement('ul',
              {
                className: 'social-media-list'
              }, socialMedia
            ),
            React.createElement('form',
              {
                className: 'pure-u-1 subscribe-form'
              },
              React.createElement('p',
                {
                  className: 'tag-text -white -center -fullwidth _marginbottom-md',
                }, self.state.language.text
              ),
              React.createElement('div',
                {
                  className: 'fielset'
                },
                React.createElement('input',
                  {
                    className: 'input',
                    placeholder: self.state.language.placeholder,
                    type: 'text'
                  }
                ),
                React.createElement('a',
                  {
                    className: 'button',
                  }, '+'
                )
              )
            )
        )
      )
    )
  }
})